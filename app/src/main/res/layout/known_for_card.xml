<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/layout_padding_8dp"
    android:layout_marginEnd="@dimen/layout_padding_8dp"
    android:background="@color/viewBg"
    card_view:cardCornerRadius="@dimen/card_movie_radius">



    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/viewBg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/moviePic"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/movieName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif"
            android:text="Tom Hollaasdadasdasdasdsdadnd"
            android:singleLine="true"
            android:textColor="#0a1c24"
            android:textSize="12sp"
            android:textStyle="normal" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
